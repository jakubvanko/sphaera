{
  "extends": [
    "react-app",
    "airbnb",
    "airbnb/hooks",
    "plugin:jsx-a11y/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": ["jsx-a11y", "react", "simple-import-sort", "prettier"],
  "rules": {
    "react/jsx-curly-brace-presence": [
      2,
      {
        "props": "always",
        "children": "never"
      }
    ],
    "simple-import-sort/sort": "error",
    "sort-imports": "off",
    "import/order": "off"
  }
}
